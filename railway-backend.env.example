# Railway Backend Service 환경 변수 예제
# Railway 콘솔에서 각 환경 변수를 설정하세요

# Rails 환경
RAILS_ENV=production

# 데이터베이스 설정 (Railway PostgreSQL 자동 제공)
DATABASE_URL=${RAILWAY_POSTGRESQL_URL}
PGDATABASE=${RAILWAY_POSTGRESQL_DATABASE}
PGUSER=${RAILWAY_POSTGRESQL_USER}
PGPASSWORD=${RAILWAY_POSTGRESQL_PASSWORD}
PGHOST=${RAILWAY_POSTGRESQL_HOST}
PGPORT=${RAILWAY_POSTGRESQL_PORT}

# Rails 암호화 키 (config/master.key 파일 내용)
RAILS_MASTER_KEY=your_backend_master_key_here

# CORS 설정 (Frontend 도메인)
FRONTEND_URL=https://your-frontend-service.railway.app

# Railway 호스트 설정
RAILWAY_STATIC_URL=${RAILWAY_STATIC_URL}
RAILWAY_PUBLIC_DOMAIN=${RAILWAY_PUBLIC_DOMAIN}

# 로그 레벨
RAILS_LOG_LEVEL=info

# Rails 스레드 설정
RAILS_MAX_THREADS=10